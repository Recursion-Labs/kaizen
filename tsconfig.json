{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "ESLint",
  "extends": "./packages/tsconfig/base.json",
  "compilerOptions": {
    "noImplicitAny": false,
    "noEmit": false,
    "target": "ESNext"
  },
  "include": [
    "eslint.config.ts",
    "testRunner.ts",
    "packages/**/*.{ts,tsx}",
    "packages/detectors/**/*.ts",
    "packages/detectors/test/**/*.ts",
    "packages/knowledge/**/*.ts",
    "packages/knowledge/test/**/*.ts",
    "packages/interventions/**/*.ts",
    "packages/test/**/*.ts"
  ],
  "exclude": ["node_modules", "dist", "build"]
}


